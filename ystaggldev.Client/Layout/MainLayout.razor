@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudHidden Breakpoint="Breakpoint.Xl" Invert="true">
    <MudAppBar Elevation="1">
        <MudNavLink Href="/" Match="NavLinkMatch.All">
        <MudText Typo="Typo.h5" Class="d-flex justify-start ml-3">ystaggl<span class="mud-secondary-text">.dev</span></MudText>
        </MudNavLink>
        
        <MudNavLink Class="ml-20" Href="programming" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Code">Programming</MudNavLink>
        <MudNavLink Href="music" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.MusicNote">Music</MudNavLink>
        <MudNavLink Href="about" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AccountCircle">About</MudNavLink>
        
    </MudAppBar>
    </MudHidden>

    <MudSwipeArea OnSwipeEnd="@OnSwipeEnd" Style="width: 100%;">
        <MudDrawer @bind-Open="@_drawerOpen" Fixed="false" Elevation="1" Variant="@DrawerVariant.Persistent" Color="Color.Primary">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">My App</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Class="ml-20" Href="programming" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Code">Programming</MudNavLink>
                <MudNavLink Href="music" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.MusicNote">Music</MudNavLink>
                <MudNavLink Href="about" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AccountCircle">About</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
    </MudSwipeArea>








